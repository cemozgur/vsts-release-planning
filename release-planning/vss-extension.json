    {
        "manifestVersion": 1,
        "id": "vsts-extensions-releasePlanning",
        "version": "0.0.19",
        "name": "Release Planning - 19",
        "description": "Extendin VSTS projects for using a release planning approach.",
        "publisher": "ytaloborjamori",
        "targets": [
            {
                "id": "Microsoft.VisualStudio.Services"
                }
            ],

        "icons": {
            "default": "images/logo.png"
         },

        "demands": [
            "contribution/ms.vss-dashboards-web.widget-sdk-version-2"
        ],

        "contributions": [
            {
                "id": "vsts.ucl.ReleasePlanning19",
                "type": "ms.vss-web.hub",
                "description": "Adds a 'Release Planning' hub to the Work hub group. This will get all the features and do the algorithm to present a release plan.",
                "targets": [
                    "ms.vss-work-web.work-hub-group"
                    ],
                "properties": {
                    "name": "Release Planning",
                    "order": 1,
                    "uri": "release-planning.html"
                }
            },

            {
                "id": "vsts.ucl.FeatureTemplate.Extension",
                "type": "ms.vss-work-web.work-item-form-group",
                "description": "Extension for a feature template",
                "targets": [
                    "ms.vss-work-web.work-item-form"
                    ],
                "properties": {
                    "name": "Feature Template Extension",
                    "uri": "feature-template-extension.html"
                }
            }
        ],

        "files": [
            {
                "path": "release-planning.html", "addressable": true
            },
            {
                "path": "feature-template-extension.html", "addressable": true
            },
            {
                "path": "sdk/scripts", "addressable": true
            },
            {
                "path": "images", "addressable": true
            }
        ],

        "scopes": [
            "vso.work",
            "vso.work_write",
            "vso.profile"
        ]
    }
